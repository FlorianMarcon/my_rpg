#include "inventory_header.h"

linked_list_t	*find_my_obj(linked_list_t *tmp, char *name)
{
	while (tmp != NULL) {
		if (my_strcmp(tmp->data->name, name) == 0)
			return (tmp);
		tmp = tmp->next;
	}
	return (tmp);
}

player_inv_t	*create_node_player(player_inv_t *tmp, linked_list_t *ptr)
{
	player_inv_t *elem = malloc(sizeof(player_inv_t));

	if (elem == NULL)
		return (NULL);
	while (tmp->next != NULL)
		tmp = tmp->next;
	tmp->next = elem;
	elem->sprite = ptr->data->sprite;
	elem->texture = ptr->data->texture;
	sfSprite_setTexture(elem->sprie, elem->texture, sfTrue);
	elem->att = ptr->data->att;
	elem->att_mag = ptr->data->att_mag;

	return(
}

player_inv_t	*create_player_obj(linked_list_t *tmp, char *name, inv_t *inv, 	player_inv_t *ptr)
{
	static int place =  calc_place(player);

